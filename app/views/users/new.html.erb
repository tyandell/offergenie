<% content_for :header do %>
  <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign up for OfferGenie</h2>
<% end %>

<%= form_with(model: @user) do |f| %>
  <%= render("errors", model: @user, class: "mb-6") %>

  <div class="space-y-6">
    <div>
      <%= f.label(:username, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.text_field(:username, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <%= f.label(:first_name, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.text_field(:first_name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <%= f.label(:last_name, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.text_field(:last_name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <%= f.label(:born_on, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.date_field(:born_on, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6", placeholder: "MM/DD/YYYY") %>
      </div>
    </div>

    <div>
      <%= f.label(:gender, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.select(:gender, gender_select_options, {}, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <%= f.label(:password, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.password_field(:password, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <%= f.label(:password_confirmation, class: "block text-sm font-medium leading-6 text-gray-900") %>
      <div class="mt-2">
        <%= f.password_field(:password_confirmation, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6") %>
      </div>
    </div>

    <div>
      <button type="submit" class="flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500">Sign up</button>
    </div>
  </div>
<% end %>
